{
  "name": "project-showcase",
  "version": "1.0.0",
  "description": "Fullstack project showcase application",
  "main": "backend/server.js",
  "scripts": {
    "start": "node backend/server.js",
    "build": "cd frontend && npm install && npm run build",
    "dev": "npx concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npx nodemon server.js",
    "dev:frontend": "cd frontend && npm run dev -- --port 5174",
    "install-all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "clean": "rm -rf node_modules backend/node_modules frontend/node_modules frontend/dist"
  },
  "keywords": [
    "portfolio",
    "showcase",
    "mern",
    "react",
    "node"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
